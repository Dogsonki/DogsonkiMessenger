<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.LoginView"
			 BackgroundColor="#1d1f1d">
    <ContentPage.Content>
		<StackLayout Padding="20">
			<StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
				<Entry Focused="Input_Focused" Placeholder="Username" WidthRequest="250" x:Name="Input_Username"></Entry>
				<Entry Focused="Input_Focused" IsPassword="True" Placeholder="Password" WidthRequest="200"  x:Name="Input_Password"></Entry>
				<StackLayout x:Name="ErrorLevel">
					
				</StackLayout>
				<StackLayout Orientation="Horizontal" Spacing="2">
					<CheckBox Color="#706f6d" ></CheckBox>
					<Label Padding="5" Text="Remember me ?"></Label>
				</StackLayout>
				
			</StackLayout>
			<Button BackgroundColor="#706f6d" BorderWidth="2" CornerRadius="10" Clicked="LoginDone" Text="Login"></Button>
		</StackLayout>

	</ContentPage.Content>
</ContentPage>