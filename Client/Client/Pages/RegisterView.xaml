<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.RegisterView">
    <ContentPage.Content>
        <StackLayout>
			<Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" Text="Create account now!"></Label>
			<StackLayout Padding="10">
				
			</StackLayout>
			<StackLayout HorizontalOptions="Center" VerticalOptions="Center">
				<Entry Placeholder="Username" WidthRequest="200"  x:Name="Input_Username"></Entry>
				<Entry Placeholder="Password" WidthRequest="200"  x:Name="Input_Password"></Entry>
				<Button BorderWidth="2" CornerRadius="10" Clicked="RegisterDone" Text="Register"></Button>
			</StackLayout>
			<StackLayout>
				<Label Text="Already registred?"></Label>
			</StackLayout>
		</StackLayout>

    </ContentPage.Content>
</ContentPage>