<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.ProfileOptions"
			  BackgroundColor="#121212">
    <ContentPage.Content>
        <StackLayout>
			<Label HorizontalOptions="Center" FontAttributes="Bold" FontSize="17" Text="PROFILE SETTINGS"></Label>
			<Button CornerRadius="10" BackgroundColor="#252525" Text="Change avatar" Clicked="ChangeAvatarClicked"></Button>
			<Label HorizontalOptions="Center" FontAttributes="Bold" FontSize="17" Text="APP SETTINGS"></Label>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>