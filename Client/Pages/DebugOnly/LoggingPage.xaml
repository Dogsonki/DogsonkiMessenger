<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.DebugOnly.LoggingPage"
			 xmlns:logger="clr-namespace:Client.Utility"
             BackgroundColor="#121212">
	
	<ContentPage.BindingContext>
		<logger:Logger></logger:Logger>
	</ContentPage.BindingContext>
	
	<ScrollView>
		<StackLayout BindableLayout.ItemsSource="{Binding Source={x:Static logger:Logger.LoggerStack}}">
			<BindableLayout.ItemTemplate>
				<DataTemplate>
					<StackLayout>
						<Label TextColor="{Binding color}" Text="{Binding message}"/>
					</StackLayout>
				</DataTemplate>
			</BindableLayout.ItemTemplate>
		</StackLayout>
	</ScrollView>
</ContentPage>