<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.PasswordForgot.ForgotPasswordEnterCode"
             Title="ForgotPasswordEnterCode"
			 BackgroundColor="#121212">
	
	<VerticalStackLayout Padding="20">
		<Label HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold" Text="Enter verification code below."/>
		<Label HorizontalOptions="Center" FontSize="Small" Text="We sent you an email with verification code."/>
		<StackLayout HorizontalOptions="Center" Padding="10">
			<Frame BorderColor="White" HeightRequest="40" Background="#121212">
				<Entry x:Name="CodeInput" Completed="CheckCode" FontSize="20" WidthRequest="60" HeightRequest="100" Keyboard="Numeric" MaxLength="5" Placeholder="Code"/>
			</Frame>
		</StackLayout>

		<StackLayout Padding="0" IsVisible="true" x:Name="InfoLevel" VerticalOptions="Center" HorizontalOptions="Center"/>
		<StackLayout Padding="0" IsVisible="true" x:Name="ErrorLevel" VerticalOptions="Center" HorizontalOptions="Center"/>

		<StackLayout Padding="10">
			<Button BackgroundColor="#FF252525" BorderWidth="0" 
						WidthRequest="250" Text="Done" CornerRadius="15"
						FontFamily="OpenSansSemibold" Clicked="CheckCode"/>
		</StackLayout>
	</VerticalStackLayout>
</ContentPage>