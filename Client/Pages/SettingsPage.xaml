<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.SettingsPage"
             Title="ProfileSettings"
			 BackgroundColor="#121212">

	<ContentPage.Content>
		<StackLayout>
			<StackLayout Spacing="15">
				<Label HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" Text="User Settings"/>

				<Button Clicked="ShowProfileSettings" WidthRequest="200" BackgroundColor="#252525" Text="User Profile"/>
				<Button Clicked="ShowCommandsList" WidthRequest="200" BackgroundColor="#252525" Text="Chat Commands"/>

				<BoxView HeightRequest="1" Color="#252525" Margin ="80,0,80,0"/>

				<Label HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" Text="App Settings"/>

				<Button Clicked="ShowAdvancedSettings" WidthRequest="200" BackgroundColor="#252525" Text="Advanced"/>
				<Button Clicked="ShowAdvancedSettings" WidthRequest="200" BackgroundColor="#252525" Text="Notifications"/>

				<BoxView HeightRequest="1" Color="#252525" Margin ="80,0,80,0"/>

				<Button Clicked="Logout" WidthRequest="200" BackgroundColor="#252525" Text="Logout"/>

			</StackLayout>
		</StackLayout>

	</ContentPage.Content>
	
</ContentPage>
