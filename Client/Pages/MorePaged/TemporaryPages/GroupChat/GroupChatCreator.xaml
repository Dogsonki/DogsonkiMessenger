<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.TemporaryPages.GroupChat.GroupChatCreator"
             Title="GroupChatCreator"
			 BackgroundColor="#121212"> 
	
	<ScrollView>

		<StackLayout>
			<StackLayout Margin="0,0,0,20">
				<Frame x:Name="MessageInputFrame" BorderColor="#191919" BackgroundColor="#202020" Padding="0" CornerRadius="18" 
			   HeightRequest="45" WidthRequest="300">
					<Entry WidthRequest="290" Margin="10,0,0,0" x:Name="SearchInput"
				   HeightRequest="50" FontSize="17" HorizontalOptions="Start"
			       IsTextPredictionEnabled="True" PlaceholderColor="White" Placeholder="Search for fiends to invite!"
				   Keyboard="Plain" Completed="SearchPressed"/>
				</Frame>
			</StackLayout>

			<StackLayout>
				<ListView >
					
				</ListView>
			</StackLayout>
		</StackLayout>
	</ScrollView>
	
</ContentPage>