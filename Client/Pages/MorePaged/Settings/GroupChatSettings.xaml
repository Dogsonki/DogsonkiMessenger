<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Pages.Settings.GroupChatSettings"
             Title="GroupChatSettings">

	<VerticalStackLayout Spacing="15">
		<Label HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" Text="Group Chat Settings"/>

		<Button Clicked="ChangeGroupAvatar" WidthRequest="200" BackgroundColor="#252525" Text="Change Group Avatar"/>

		<Button WidthRequest="200" BackgroundColor="#252525" Text="Members"/>

		<Button WidthRequest="200" TextColor="Red" BackgroundColor="#252525" Text="Leave"/>


</VerticalStackLayout>
</ContentPage>