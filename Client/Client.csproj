<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
        <TargetFrameworks>net6.0-android;net6.0-ios;net6.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net6.0-windows10.0.19041.0</TargetFrameworks>

        <OutputType>Exe</OutputType>
        <RootNamespace>Client</RootNamespace>
        <UseMaui>true</UseMaui>
        <SingleProject>true</SingleProject>
        <ImplicitUsings>enable</ImplicitUsings>
        <EnableDefaultCssItems>false</EnableDefaultCssItems>
		<!-- Display name -->
        <ApplicationTitle>Client</ApplicationTitle>

        <!-- App Identifier -->
        <ApplicationId>com.companyname.client</ApplicationId>
        <ApplicationIdGuid>017A7B9F-40C9-4168-9988-706DDA75EAD2</ApplicationIdGuid>

        <!-- Versions -->
        <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
        <ApplicationVersion>1</ApplicationVersion>

        <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">14.2</SupportedOSPlatformVersion>
        <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">14.0</SupportedOSPlatformVersion>
        <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">24.0</SupportedOSPlatformVersion>
        <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
        <TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
        <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
        <Nullable>enable</Nullable>
        <DefaultLanguage>pl-PL</DefaultLanguage>
    </PropertyGroup>

    <ItemGroup>
        <!-- App Icon -->
        <MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

        <!-- Splash Screen -->

        <!-- Images -->

        <!-- Custom Fonts -->
        <MauiFont Include="Resources\Fonts\*" />

        <!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
        <MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
      <Content Remove="Networking\SocketConfig.json" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Client\wwwroot\Images\windows_splash_placeholder.scale-100.png" />
      <None Remove="Client\wwwroot\Images\windows_splash_placeholder.scale-125.png" />
      <None Remove="Client\wwwroot\Images\windows_splash_placeholder.scale-150.png" />
      <None Remove="Client\wwwroot\Images\windows_splash_placeholder.scale-200.png" />
      <None Remove="Client\wwwroot\Images\windows_splash_placeholder.scale-400.png" />
      <None Remove="Pages\ChatPage.razor.css" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Client\wwwroot\Images\windows_splash_placeholder.scale-100.png" />
      <Content Include="Client\wwwroot\Images\windows_splash_placeholder.scale-125.png" />
      <Content Include="Client\wwwroot\Images\windows_splash_placeholder.scale-150.png" />
      <Content Include="Client\wwwroot\Images\windows_splash_placeholder.scale-200.png" />
      <Content Include="Client\wwwroot\Images\windows_splash_placeholder.scale-400.png" />
      <Content Include="Pages\ChatPage.razor.css" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Networking\SocketConfig.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.12" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Models\Exceptions\" />
      <Folder Include="Resources\Splash\" />
    </ItemGroup>

    <ItemGroup>
      <MauiAsset Include="Platforms\Android\Resources\raw\cert" />
    </ItemGroup>

    <ItemGroup>
      <None Include="wwwroot\Images\dotnet_bot.svg" />
      <None Include="wwwroot\js\JSElementsInterop.js" />
      <None Include="wwwroot\js\Navigation.js" />
    </ItemGroup>
</Project>
